<resources>

    <!-- Light Theme -->
    <style name="Theme.KidsLauncher" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary Color (Orange) -->
        <item name="colorPrimary">#FFA000</item>
        <item name="colorPrimaryDark">#FF5722</item>
        <item name="colorAccent">#FF5722</item>

        <!-- Background Color -->
        <item name="android:windowBackground">#F5F5F5</item>

        <!-- Status Bar & Navigation Bar -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>

        <!-- No Action Bar -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>

        <!-- Button Styles -->
        <item name="android:buttonStyle">@style/ButtonStyle</item>
    </style>

    <!-- Button Customization -->
    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">#FFA000</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

</resources>
